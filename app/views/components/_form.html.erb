<%= form_for 'component', :html => { :class => "form-horizontal component" } do |f| %>

    <% if @component.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@component.errors.count, "error") %> prohibited this component from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @component.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  
  <b>Component type</b>
  <div class="panel panel-default">
    <div class="panel-body">
      <%= @component.type.gsub('Component', '') %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :data, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :data, :class => 'form-control' %>
    </div>
    <%= error_span(@component[:data]) %>
  </div><br/>
  <div class="control-group">
    <%= f.label :position, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :position, :class => 'form-control' %>
    </div>
    <%= error_span(@component[:position]) %>
  </div><br/>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            components_path, :class => 'btn btn-default' %>

<% end %>

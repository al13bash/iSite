<h1>Listing components</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Position</th>
      <th>Site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @components.each do |component| %>
      <tr>
        <td><%= component.data %></td>
        <td><%= component.position %></td>
        <td><%= link_to site_url(component.site).to_s, component.site %></td>
        <td><%= link_to 'Edit', edit_component_path(component) %></td>
        <td><%= link_to 'Destroy', site_path(component.site_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Component', new_component_path %>

<%- if controller_name != 'sessions' %>
  <%= link_to t('.log in'), new_session_path(resource_name), :class => 'btn btn-default' %><br />
<% end -%><br/>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('.sign up'), new_registration_path(resource_name), :class => 'btn btn-default' %><br />
<% end -%><br/>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('.password'), new_password_path(resource_name), :class => 'btn btn-default' %><br />
<% end -%><br/>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('.instructions'), new_confirmation_path(resource_name), :class => 'btn btn-default' %><br />
<% end -%>
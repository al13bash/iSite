<%- model_class = Site -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="col-lg-12">
	<div class="well sidebar-nav">
		<table>
			<tr>
				<td><h3>Available elements:</h3></td>
				<td>
					<ul class="nav navbar-nav">
						<li><h3><span class="label label-primary"> Text </span></h3></li>
			            <li><h3><span class="label label-success"> Video </span></h3></li>
			            <li><h3><span class="label label-info"> Rating </span></h3></li>
			            <li><h3><span class="label label-warning"> Gallery </span></h3></li>
        			</ul>
        		</td>
        	</tr>
        </table>
    </div>
</div>

<dl class="dl-horizontal">
	<div class="site">
		<% @site.components.order(:position).each do |component| %>
		<%= render partial: "#{component.type.tableize.singularize}", locals: {component: component} %>
		<% end %>
	</div>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sites_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_site_path(@site), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              site_path(@site),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
